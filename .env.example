# Archivo de ejemplo para variables de entorno
# Copia este archivo como .env.local y configura las variables

# Google Maps API Key (Frontend)
# Obtén tu API key en: https://console.cloud.google.com/apis/credentials
# APIs necesarias: Geocoding API, Maps JavaScript API
VITE_GOOGLE_MAPS_API_KEY=AIzaSyA...tu_api_key_aqui

# Configuración de geolocalización
VITE_ENABLE_GEOLOCATION=true
VITE_DEFAULT_DELIVERY_RADIUS=5000

# Configuración de debug (opcional)
VITE_DEBUG_GEOCODING=false
VITE_DEBUG_LOCATION_VALIDATION=false

# Configuración de la aplicación
VITE_APP_NAME="Pollos Andino"
VITE_APP_VERSION="2.0.0-geographic"

